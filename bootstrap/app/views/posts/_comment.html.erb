<div class="container">
<div class ="row">
<div class="col-md-4">
<h2>Add a comment:</h2>
<%= form_for([@post, @post.comments.build]) do |f| %>
  <p>
    <%= f.label :comment %><br>
    <%= f.text_field :comment, :class => "form-control" %>
  </p>
  
  <p>
    <%= f.submit class:  'btn btn-lg btn-primary btn-block' %>
  </p>
<% end %>
</div>
</div>
</div>