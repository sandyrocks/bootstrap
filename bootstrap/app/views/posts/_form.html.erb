<div class="container">
  <div class ="row">
    <div class="col-md-4 col-md-offset-4">
      <h2 class="form-signin-heading">New Post</h2>
      <%= form_for(@post) do |f|  %>
        <% if @post.errors.any? %>
          <div id="error_explanation">
            <h2><%= pluralize(@post.errors.count, "error") %> prohibited this post from being saved:</h2>

            <ul>
            <% @post.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
            <% end %>
            </ul>
          </div>
        <% end %>
         <% @roles = Category.all %>
          <%= f.text_field :title, :class => "form-control", :placeholder => 'Post Title' %>
          <br/>
          <%= collection_select(:post, :category_id, @roles, :id, :name, {:prompt => true}, :class => "form-control")  %>
          <br/>
          <%= f.text_field :link, :class => "form-control", :placeholder => 'Post Link' %>
          <br/>
          <%= f.text_area :blog, :class => "form-control", :cols => "30", :rows => "10" %>
          <br/>
          <%= f.submit class:  'btn btn-lg btn-primary btn-block' %>

      <% end %>

