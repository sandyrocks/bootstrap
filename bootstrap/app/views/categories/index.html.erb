<div class="container">
<div class="row">
<div class="col-md-4">
<h1>Listing categories</h1>
<div class="table-responsive">
<table class = "table table-hover">
  <thead>
    <tr>
      <th>Id</th>
      <th>Name</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @categories.each do |category| %>
      <tr>
        <td><%= category.id%></td>
        <td><%= category.name %></td>
        <td><%= link_to 'Show', category, :class => 'btn active btn-xs btn-primary' %></td>
        <td><%= link_to 'Edit', edit_category_path(category), :class => 'btn active btn-xs btn-success' %></td>
        <td><%= link_to 'Destroy', category,:class => 'btn active btn-xs btn-danger', method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Category', new_category_path %>

</div>
</div>
</div>
</div>